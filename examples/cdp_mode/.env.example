# Environment variables for Google Search API

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_KEY=your-secret-api-key-here

# Browser Configuration
HEADLESS=true
INCOGNITO=true

# Timeouts (seconds)
PAGE_LOAD_TIMEOUT=30
SEARCH_TIMEOUT=60

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=10

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Screenshots
SAVE_SCREENSHOTS=true
SCREENSHOT_DIR=/tmp

# Proxy (optional)
# USE_PROXY=false
# PROXY_SERVER=username:password@proxy-server:port

# Resource Limits
MAX_WORKERS=4
MAX_CONCURRENT_SEARCHES=3

# Chrome Options
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
